{
    "name": "inventory-api",
    "version": "0.1.0",
    "description": "",
    "scripts": {
        "codegen": "graphql-codegen --config codegen.yml",
        "lint": "npx eslint --ext .ts --fix src/**",
        "pi": "npm prune && npm i",
        "start": "node --require ts-node/register src/index.ts | pino-pretty -t",
        "start:debug": "node --inspect=0.0.0.0:9042 --require ts-node/register src/index.ts | pino-pretty -t",
        "watch": "concurrently \"npm:watch-*\"",
        "watch-codegen": "nodemon --watch 'src/graph/**' --ext 'ts,json' --ignore 'src/graph/generated.ts' --ignore 'src/graph/resolvers/**' --delay 8 --exec 'npm run codegen'",
        "watch-node": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npm run start:debug'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "apollo-datasource": "0.10.0",
        "apollo-server": "2.26.2",
        "dataloader": "2.0.0",
        "dotenv": "8.2.0",
        "graphql": "15.4.0",
        "lodash": "4.17.20",
        "pg": "8.5.0",
        "pino": "6.7.0",
        "pino-pretty": "4.3.0",
        "reflect-metadata": "0.1.13",
        "typeorm": "0.2.29"
    },
    "devDependencies": {
        "@graphql-codegen/add": "2.0.2",
        "@graphql-codegen/cli": "1.20.1",
        "@graphql-codegen/introspection": "1.18.1",
        "@graphql-codegen/typescript": "1.20.2",
        "@graphql-codegen/typescript-resolvers": "1.18.1",
        "@types/node": "14.14.25",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "concurrently": "5.3.0",
        "eslint": "7.19.0",
        "eslint-config-airbnb-typescript": "12.3.1",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-import": "2.22.1",
        "nodemon": "2.0.7",
        "prettier": "2.2.1",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    }
}
